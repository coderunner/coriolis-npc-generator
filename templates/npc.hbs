<div class="coriolis-npc">
  {{#if settings.generateName}}
  <p><span>{{localize 'coriolisNpcGenerator.labels.name'}}: </span><span
      class='name'
    >{{npc.firstName}}
      {{npc.lastName}}</span></p>
  {{/if}}
  {{#if settings.generateIcon}}
  <p><span>{{localize 'coriolisNpcGenerator.labels.icon'}}: </span><span
      class='icon'
    >{{localize
        (concat 'coriolisNpcGenerator.icons.' npc.icon)
      }}</span></p>
  {{/if}}
  {{#if settings.generateProfession}}
  <p><span>{{localize 'coriolisNpcGenerator.labels.profession'}}: </span><span
      class='profession'
    >{{localize
        (concat 'coriolisNpcGenerator.professions.' npc.profession.name)
      }}</span></p>
  {{/if}}
  {{#if settings.generateFaction}}
  {{#if npc.faction}}
  <p><span>{{localize 'coriolisNpcGenerator.labels.faction'}}: </span><span
      class='faction'
    >{{localize
        (concat 'coriolisNpcGenerator.factions.' npc.faction)
      }}</span></p>
  {{/if}}
  {{/if}}
  {{#if settings.generateCharacteristic}}
  <p><span>{{localize 'coriolisNpcGenerator.labels.characteristic'}}:
    </span><span class='characteristic'>{{localize
        (concat 'coriolisNpcGenerator.characteristics.' npc.characteristic)
      }}</span></p>
  {{/if}}
  {{#if settings.generateActivity}}
  <p><span>{{localize 'coriolisNpcGenerator.labels.activity'}}: </span><span
      class='activity'
    >{{localize
        (concat 'coriolisNpcGenerator.activities.' npc.activity)
      }}</span></p>
  {{/if}}
  {{#if settings.generateMotivation}}
  <p>
      <span>{{localize 'coriolisNpcGenerator.labels.motivation'}}: </span><span
      class='motivation'
    >{{localize
        (concat 'coriolisNpcGenerator.motivations.' npc.motivation)
      }}</span>
  <p>
  {{/if}}
  {{#if actorId}}
  <a class="content-link" draggable="true" data-uuid="Actor.{{actorId}}" data-id={{actorId}} data-type="Actor" data-tooltip="Actor">
    <i class="fas fa-user"></i>
    {{npc.firstName}} {{npc.lastName}}
  </a>
  {{else}}
  <div class="create-sheet">
      <a>
          <span>{{localize 'coriolisNpcGenerator.labels.createNpcSheet'}}</span>
      </a>
  </div>
  {{/if}}
</div>